<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center" >
        <shape>
            <corners android:radius="0dp"/>
            <solid android:color="#55ffffff"/>           <!--  颜色-->
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:gravity="center" >
        <clip>
            <shape>
                <corners android:radius="0dp"/>
                <solid android:color="#55ffffff"/>            <!-- 颜色-->
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress" android:gravity="center" >
        <clip>
            <shape>
                <corners android:radius="0dp"/>
                <solid android:color="#ffffff"/>   <!--  颜色-->
            </shape>
        </clip>
    </item>
</layer-list>